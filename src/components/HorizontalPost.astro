---
const { post, postImageHeight} = Astro.props 
---
<a href={`/frontend/post/${post.id}`} class="block">
    <div class="flex p-2 md:p-4">
        <picture class="w-80">
            <img src={post.data.image.url} alt={post.data.image.alt} class="object-cover rounded-2xl" loading="lazy"/>
        </picture>
        <div class="w-full flex flex-col justify-evenly px-2 md:px-4">
            <p class="text-sm md:text-2xl font-extrabold">{post.data.title}</p>
            <p class="hidden md:inline">{post.data.description}</p>
            <p class="text-xs md:text-md">{post.data.pubDate.toString().slice(0,15)}</p>
        </div>
    </div>
</a>
