---
const { post, customClass = "", postImageHeight = ""  } = Astro.props 
---
<a href={`/frontend/post/${post.id}`} class="block">
    <div class="flex p-4">
        <picture class="w-80">
            <img src={post.data.image.url} alt={post.data.image.alt} class="object-cover rounded-2xl" loading="lazy"/>
        </picture>
        <div class="w-full">
            <p class="text-2xl font-extrabold px-8">{post.data.title}</p>
            <p class="text-lg px-8">{post.data.description}</p>
        </div>
    </div>
</a>
